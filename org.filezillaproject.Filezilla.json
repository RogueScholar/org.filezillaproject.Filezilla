{
    "id": "org.filezillaproject.Filezilla",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "filezilla",
    "rename-icon": "filezilla",
    "copy-icon": true,
    "rename-desktop-file": "filezilla.desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.PowerManagement",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.gnome.SessionManager",
        "--filesystem=host",
        "--share=network",
        "--socket=ssh-auth"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/aclocal"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        {
            "name": "boost",
            "sources": [
                {
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "url-template": "https://archives.boost.io/release//$version/source/boost_${major}_${minor}_${patch}.tar.bz2"
                    },
                    "type": "archive",
                    "url": "https://archives.boost.io/release//1.88.0/source/boost_1_88_0.tar.bz2",
                    "sha256": "46d9d2c06637b219270877c9e16155cbd015b6dc84349af064c088e9b5b12f7b"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh",
                "./b2 install --prefix=/app/ variant=release link=static threading=multi --with-regex -j $FLATPAK_BUILDER_N_JOBS"
            ],
            "cleanup": [
                "/lib/",
                ""
            ]
        },
        {
            "name": "wxWidgets",
            "cleanup": [
                "/bin",
                "/share/bakefile"
            ],
            "config-opts": [
                "--with-opengl",
                "--with-libjpeg",
                "--with-libtiff",
                "--with-libpng",
                "--with-zlib",
                "--disable-sdltest",
                "--enable-unicode",
                "--enable-display",
                "--enable-propgrid",
                "--disable-webview",
                "--disable-webviewwebkit",
                "--with-expat=builtin",
                "--with-libiconv=/usr"
            ],
            "build-options": {
                "cxxflags": "-std=c++0x"
            },
            "sources": [
                {
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/wxWidgets/wxWidgets/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"wxWidgets-\" + $version + \".tar.bz2\") | .browser_download_url"
                    },
                    "type": "archive",
                    "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.2.8.1/wxWidgets-3.2.8.1.tar.bz2",
                    "sha256": "ad0cf6c18815dcf1a6a89ad3c3d21a306cd7b5d99a602f77372ef1d92cb7d756"
                }
            ]
        },
        {
            "name": "libfilezilla",
            "sources": [
                {
                    "x-checker-data": {
                        "type": "html",
                        "//": "filezilla-project.org blocks fedc user agent",
                        "url": "https://packages.debian.org/source/sid/libfilezilla",
                        "pattern": "<a href=\"(http://deb.debian.org/debian/pool/main/libf/libfilezilla/libfilezilla_([^\"]+).orig.tar.xz)\">",
                        "is-important": true
                    },
                    "type": "archive",
                    "url": "http://deb.debian.org/debian/pool/main/libf/libfilezilla/libfilezilla_0.51.1.orig.tar.xz",
                    "sha512": "9f686a5be076321a2db8b980d67a31f3c52726ea5d1550d44381c0c18a862056ee6669f5d7f5a67077f9283c04ceba3425c5b087e24d62671af8d68e4568442f"
                }
            ]
        },
        {
            "name": "filezilla",
            "config-opts": [
                "--disable-autoupdatecheck",
                "--disable-manualupdatecheck",
                "--with-pugixml=builtin"
            ],
            "cleanup": [
                "/share/pixmaps",
                "/share/man"
            ],
            "post-install": [
                "install -Dm644 org.filezillaproject.Filezilla.metainfo.xml ${FLATPAK_DEST}/share/metainfo/org.filezillaproject.Filezilla.metainfo.xml",
                "rm /app/share/appdata/filezilla.appdata.xml"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "html",
                        "//": "filezilla-project.org blocks fedc user agent",
                        "url": "https://packages.debian.org/source/sid/filezilla",
                        "pattern": "<a href=\"(http://deb.debian.org/debian/pool/main/f/filezilla/filezilla_([^\"]+).orig.tar.xz)\">",
                        "is-main-source": true
                    },
                    "type": "archive",
                    "url": "http://deb.debian.org/debian/pool/main/f/filezilla/filezilla_3.69.3.orig.tar.xz",
                    "sha512": "d5adb7d5d1feaba473686c2da4856a1c5acc3dab64f5c6b28f2eecf9e14d9887c7f30f721a2135133a38cd860e38329e898cb5bb3a750091b35dbef4f8cf5d21"
                },
                {
                    "type": "file",
                    "path": "org.filezillaproject.Filezilla.metainfo.xml"
                },
                {
                    "type": "patch",
                    "path": "0001-Correct-notification-icon-and-app-name.patch"
                },
                {
                    "type": "patch",
                    "path": "desktop-file-mime.patch"
                }
            ]
        }
    ]
}
